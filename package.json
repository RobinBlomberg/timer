{
  "name": "@robinblomberg/timer",
  "version": "0.1.2",
  "author": "Robin Blomberg",
  "type": "module",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@robinblomberg/eslint-config-robinblomberg": "^0.2.20",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3"
  },
  "scripts": {
    "compile": "rimraf dist && tsc",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "eslint \"**/*.{js,ts}\" --fix",
    "pre-commit": "concurrently --kill-others-on-fail \"npm run test\" eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run compile && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "cross-env CI=true eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobinBlomberg/timer.git"
  },
  "bugs": {
    "url": "https://github.com/RobinBlomberg/timer/issues"
  },
  "homepage": "https://github.com/RobinBlomberg/timer#readme"
}
